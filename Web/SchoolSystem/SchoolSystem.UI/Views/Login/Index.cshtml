@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log in</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>

    <div class="cointainer">
        <div class="row justify-content-center">

            <div class="card">
                <div class="card-header">Log in</div>
                <div class="card-body">
                    <form asp-controller="Login" asp-action="SignIn" method="post">
                        <div class="form-group">
                            <label class="col-form-label text-md-right" asp-for="Username"></label>

                            <input class="control-form" asp-for="Username" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label text-md-right" asp-for="Password"></label>
                            <input class="control-form" asp-for="Password" />
                        </div>
                        <div class="col-md-6 offset-md-4">
                            <input type="submit" class="btn btn-outline-primary" value="Log in">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>

</html>